<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>payfurl.sdk</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
    <Authors>Payfurl</Authors>
    <Description>.Net SDK for Payfurl</Description>
    <PackageReleaseNotes>2.0 Converted to .Net Standard Library</PackageReleaseNotes>
    <Copyright>Copyright 2021</Copyright>
    <PackageId>PayfurlSdk</PackageId>
    <Product>PayfurlSdk</Product>
    <TargetFrameworks>netstandard2.0;netcoreapp2.1;net451</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System.Web" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
